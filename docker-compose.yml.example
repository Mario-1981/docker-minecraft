#version: "3.9"

services:

  velocity:
    image: ghcr.io/mario-1981/velocity:latest
    container_name: velocity
    networks:
      - minecraft
    environment:
      JAVA_XMS: "1G"
      JAVA_XMX: "2G"
      JAVA_OPTS: "-XX:+UseG1GC -XX:+ParallelRefProcEnabled"
    ports:
      - "25565:25565"
    volumes:
      - ./velocity_data:/velocity
    depends_on:
      - paper
      - folia
    restart: unless-stopped
    stdin_open: true
    tty: true

  paper:
    image: ghcr.io/mario-1981/minecraft-paper:latest
    container_name: paper
    networks:
      - minecraft
    environment:
#      EULA: "TRUE"        # muss explizit gesetzt werden!
      JAVA_XMS: "2G"
      JAVA_XMX: "4G"
      JAVA_OPTS: "-XX:+UseG1GC -XX:+ParallelRefProcEnabled"
    volumes:
      - ./paper_data:/minecraft
    restart: unless-stopped
    stdin_open: true
    tty: true

  folia:
    image: ghcr.io/mario-1981/minecraft-folia:latest
    container_name: paper
    networks:
      - minecraft
    environment:
#      EULA: "TRUE"        # muss explizit gesetzt werden!
      JAVA_XMS: "2G"
      JAVA_XMX: "4G"
      JAVA_OPTS: "-XX:+UseG1GC -XX:+ParallelRefProcEnabled"
    volumes:
      - ./folia_data:/minecraft
    restart: unless-stopped
    stdin_open: true
    tty: true
	
networks:
  minecraft:
    driver: bridge
